<Window x:Class="AddressBook.EditorWpfApp.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AddressBook.EditorWpfApp"
        mc:Ignorable="d"
        Title="O aplikacii" Height="250" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock Text="UNIZA adresár" FontWeight="Bold" FontSize="30" HorizontalAlignment="Left" Grid.Row="0" Margin="10,10,0,0"/>
        <TextBlock x:Name="VerziaTextBlock" Text="Verzia 1.0" Margin="10" Grid.Row="1"/>
        <TextBlock x:Name="AutorTextBlock" Text="Copyright (c) 2024 Martin Žikla" Margin="10" Grid.Row="2"/>
        <TextBlock x:Name="PopisTextBlock" Text="Aplikácia na editovanie a vyhľadávanie zamestnancov" Margin="10" Grid.Row="3"/>
        <Button Content="OK" HorizontalAlignment="Right" Grid.Row="4" Margin="10" MinWidth="100" Click="AboutOk"/>
    </Grid>
</Window>
